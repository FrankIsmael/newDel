

<div class="row">
   
 {{#each courses}}
<div class="d-flex flex-row card mb-5 col-sm-6">
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/courses/{{this._id}}">
        <img src="{{this.imageURL}}" class="card-img" alt="{{this.name}}">
      </a>
    </div>
    <div class="col-md-8 bg-info">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.rating}} ⭐️ </p>
        <p class="card-text"><small class="text-muted">Last updated 1 week ago</small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

