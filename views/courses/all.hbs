<h2>Courses</h2>

 {{#each courses}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/courses/{{this._id}}">
        <img src="{{this.imageURL}}" class="card-img" alt="{{this.name}}">
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.rating}}⭐️</p>
        <p class="card-text"><small class="text-muted">Last updated 1 week ago</small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}