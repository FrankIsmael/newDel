
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.imageURL}}" class="card-img" alt="{{this.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.rating}}⭐️</p>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.costo}}</p>
        <p class="card-text">{{this.fecha}}</p>
        <p class="card-text">{{this.duration}} hrs</p>
        <p class="card-text"><small class="text-muted">Last updated {{this.timestamps}}</small></p>
      </div>
    </div>
  </div>
</div>

{{#if loggedUser}}
<form action="/artists/{{artist._id}}" method="POST">
  <textarea name="comment" cols="30" rows="10"></textarea>
  <input type="submit" value="Comment">
</form>
{{/if}}