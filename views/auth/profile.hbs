<div>

  <h2>Hello {{loggedUser.name}}</h2>

  <div class="row">
    <div class="d-flex flex-row card mb-5 col-sm-6">
      <a href="/courses/{{this.courses._id}}" style="text-decoration:none;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{this.courses.imageURL}}" class="card-img" alt="{{this.courses.name}}">
          </div>
          <div class="col-md-8 bg-info">
            <div class="card-body">
              <h5 class="card-title">{{this.courses.name}}</h5>
              <p class="card-text">{{this.courses.rating}} ⭐️ </p>
              <p class="card-text"><small class="text-muted">Last updated 1 week ago</small></p>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
</div>